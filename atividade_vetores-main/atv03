#include<stdio.h>
    int main(){
    
     int mat[3][3] = {{1,2,3},{4,5,6},{7,8,9}};
     int mat2[3][3] = {{-1,2,3},{-4,-5,6},{7,8,9}};
     int soma;
     int j, i;
  
  
  for(i=0;i<3;i++){
     for(j=0;j<3;j++){
    soma = mat[i][j] + mat2[i][j];
  }}if(soma == 0){
      printf("sao opostos");
  }else{
      printf("nao sao opostas");
  }        
  return 0;
    }
    
    
